[Unit]
Description=tf2ds on port %I
After=network.target

[Service]
Type=simple
User={{ tf2user }}
ExecStart={{ tf2path }}/srcds_run -usercon -console -game tf +sv_pure 1 +maxplayers 24 +ip {{ external_ip }} +exec server-%I.cfg +map cp_dustbowl -port %I +sm_basepath addons/sourcemod%I

Restart=on-failure

[Install]
WantedBy=multi-user.target
